@model IEnumerable<Product> 

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12" style="border: 1px solid #008bca; border-radius: 5px">
                    <div class="card">
                        <div class="aspect-ratio-container">
                            <img src="@product.ImageUrl" class="card-img-top rounded" />
                        </div>
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary">@product.Title</p>
                                <p class="card-title text-info">@product.Author</p>
                            </div>
                            <div class="pl-1">
                                <p>List Price: <strike><b>@product.ListPrice.ToString("0.00")</b></strike></p>
                                <p>As low as: £@product.Price100</p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

